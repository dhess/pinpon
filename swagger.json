{
    "swagger": "2.0",
    "info": {
        "version": "0.1",
        "title": "PinPon API",
        "license": {
            "url": "https://opensource.org/licenses/BSD-3-Clause",
            "name": "BSD3"
        },
        "description": "Send notifications to various cloud services"
    },
    "definitions": {
        "Notification": {
            "example": {
                "subject": "Hi from AWS",
                "body": "Hope you're doing well!"
            },
            "required": [
                "subject",
                "body"
            ],
            "type": "object",
            "description": "A notification",
            "properties": {
                "subject": {
                    "type": "string"
                },
                "body": {
                    "type": "string"
                }
            }
        },
        "Service": {
            "type": "string",
            "enum": [
                "AWS",
                "FCM"
            ]
        },
        "Topic": {
            "example": {
                "service": "AWS",
                "topicName": "test_topic_1"
            },
            "required": [
                "service",
                "topicName"
            ],
            "type": "object",
            "description": "A topic",
            "properties": {
                "service": {
                    "$ref": "#/definitions/Service"
                },
                "topicName": {
                    "type": "string"
                }
            }
        }
    },
    "paths": {
        "/service": {
            "get": {
                "responses": {
                    "200": {
                        "schema": {
                            "items": {
                                "$ref": "#/definitions/Service"
                            },
                            "type": "array"
                        },
                        "description": ""
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        },
        "/topic/{key}/notification": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "responses": {
                    "404": {
                        "description": "`key` not found"
                    },
                    "400": {
                        "description": "Invalid `body`"
                    },
                    "200": {
                        "schema": {
                            "$ref": "#/definitions/Notification"
                        },
                        "description": ""
                    }
                },
                "produces": [
                    "application/json",
                    "text/html;charset=utf-8"
                ],
                "parameters": [
                    {
                        "required": true,
                        "in": "path",
                        "name": "key",
                        "type": "string"
                    },
                    {
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Notification"
                        },
                        "in": "body",
                        "name": "body"
                    }
                ]
            }
        },
        "/topic": {
            "get": {
                "responses": {
                    "200": {
                        "schema": {
                            "items": {
                                "items": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "$ref": "#/definitions/Topic"
                                    }
                                ],
                                "type": "array"
                            },
                            "type": "array"
                        },
                        "description": ""
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        }
    }
}